{
  "compilerOptions": {
    "target": "ES2022", // Node.js v24 supports ES2022 features
    "lib": ["ES2022", "DOM"], // Match target and use latest available
    "module": "NodeNext", // Use NodeNext for best Node.js compatibility
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
